{
    "app":
    {
        "theme":"Default",
        "header":
        {
            "enabled":true,
            "title":
            {
                "default":"Yoda",
                "postfix":" - Yoda",
                "length":
                {
                    "max":32
                }
            },
            "button":
            {
                "close":true
            }
        },
        "width":640,
        "height":480,
        "tab":
        {
            "page":
            {
                "title":
                {
                    "default":"New page",
                    "length":
                    {
                        "max":32
                    }
                },
                "redirect":
                {
                    "follow":
                    {
                        "enabled":true,
                        "max":5,
                        "code":
                        [
                            30,
                            31
                        ]
                    }
                },
                "resolver":
                {
                    "enabled":true,
                    "request":
                    {
                        "timeout":1,
                        "host":
                        [
                            "1.1.1.1",
                            "8.8.8.8"
                        ],
                        "record":
                        [
                            "A",
                            "AAAA"
                        ]
                    },
                    "result":
                    {
                        "shuffle":false,
                        "cache":
                        {
                            "timeout":3600
                        }
                    }
                },
                "header":
                {
                    "margin":8,
                    "button":
                    {
                        "home":
                        {
                            "visible":true,
                            "label":"Home",
                            "url":"yoda://welcome"
                        },
                        "back":
                        {
                            "visible":true,
                            "label":"Back"
                        },
                        "forward":
                        {
                            "visible":true,
                            "label":"Forward"
                        },
                        "go":
                        {
                            "visible":true,
                            "label":"Go"
                        }
                    },
                    "address":
                    {
                        "placeholder":"URL or any search term...",
                        "length":
                        {
                            "max":1024
                        }
                    }
                },
                "body":
                {
                    "margin":8
                },
                "footer":
                {
                    "margin":8,
                    "status":
                    {
                        "open":
                        {
                            "complete":"{TIME_C} | {RESPONSE_META} | {RESPONSE_LENGTH} bytes | {RESPONSE_SECONDS} seconds"
                        }
                    }
                }
            }
        }
    }
}